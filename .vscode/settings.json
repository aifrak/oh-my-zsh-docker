{
  // Editor:
  "editor.rulers": [80],
  "editor.insertSpaces": true,
  "editor.tabSize": 2,

  // Files:
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // Override languages:
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "cSpell.words": [
    "Fira",
    "Fura",
    "Markdownlint",
    "aifrak",
    "copyfile",
    "dirhistory",
    "dockerized",
    "esbenp",
    "fkirc",
    "gitstatusd",
    "globalias",
    "hadolint",
    "nosborn",
    "powerlevel",
    "pytest"
  ],

  // Markdownlint:
  "markdownlint.config": {
    "MD013": true
  }
}
